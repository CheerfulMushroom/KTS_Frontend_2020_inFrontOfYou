{
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module",
    "codeFrame": true,
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "browser": true,
    "node": true
  },
  "plugins": [
    "prettier"
  ],
  "extends": [
    "google",
    "plugin:react/recommended",
    "prettier",
    "prettier/react"
  ],
  "rules": {
    "jsx-quotes": ["error", "prefer-double"],
    "quotes": ["error", "double"],
    "require-jsdoc": "off",
    "indent": ["error", 4,
      {
        "SwitchCase": 2
      }
    ],

    "max-len": ["error",
      {
        "code": 120
      }
    ]

  }
}
